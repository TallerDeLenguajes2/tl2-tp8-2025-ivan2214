@model Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>Eliminar Producto</h2>

<div class="alert alert-warning" role="alert">
    <h4>¿Está seguro que desea eliminar este producto?</h4>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>Información del Producto a Eliminar</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID Producto:</dt>
            <dd class="col-sm-9">@Model.IdProducto</dd>

            <dt class="col-sm-3">Descripción:</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3">Precio:</dt>
            <dd class="col-sm-9">$@Model.Precio</dd>
        </dl>
    </div>
</div>

<form asp-action="EliminarProducto" class="mt-3">
    <input type="hidden" asp-for="IdProducto" />
    <input type="submit" value="Eliminar Permanentemente" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>