@model List<Models.Producto>

<!--Cambio el titulo de la pag-->
@{
    ViewData[index: "Title"] = "Lista de Productos";
}



<h2>Lista de Productos</h2>

<!--Boton para crear productos-->
<section class="my-4">
    <a asp-action="CrearProducto" class="btn btn-success">Crear Producto</a>
</section>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID Producto</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.IdProducto</td>
                <td>@producto.Descripcion</td>
                <td>$@producto.Precio</td>
                <td>
                    <a asp-action="DetallesProducto" asp-route-id="@producto.IdProducto"
                        class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="EditarProducto" asp-route-id="@producto.IdProducto"
                        class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="EliminarProducto" asp-route-id="@producto.IdProducto"
                        class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
</div>