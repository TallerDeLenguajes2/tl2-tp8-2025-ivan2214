@model Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<h2>Crear Nuevo Producto</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CrearProducto">
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripci√≥n:</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio:</label>
                <input asp-for="Precio" class="form-control" type="number" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear Producto" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>