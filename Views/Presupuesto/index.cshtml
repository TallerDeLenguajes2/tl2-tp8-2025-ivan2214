@model List<Models.Presupuesto>

@{
    ViewData["Title"] = "Lista de Presupuestos";
}

<h2>Lista de Presupuestos</h2>

<p>
    <a asp-action="CrearPresupuesto" class="btn btn-success my-4">Crear Nuevo Presupuesto</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID Presupuesto</th>
            <th>Destinatario</th>
            <th>Fecha de Creaci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var presupuesto in Model)
        {
            <tr>
                <td>@presupuesto.IdPresupuesto</td>
                <td>@presupuesto.NombreDestinatario</td>
                <td>@presupuesto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="DetallesPresupuesto" asp-route-id="@presupuesto.IdPresupuesto"
                        class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="EditarPresupuesto" asp-route-id="@presupuesto.IdPresupuesto"
                        class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="EliminarPresupuesto" asp-route-id="@presupuesto.IdPresupuesto"
                        class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        No hay presupuestos registrados. <a asp-action="CrearPresupuesto" class="alert-link">Crear el primer
            presupuesto</a>.
    </div>
}

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
</div>