@model Models.Presupuesto

@{
    ViewData["Title"] = "Editar Presupuesto";
}

<h2>Editar Presupuesto</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="IdPresupuesto" />

            <div class="form-group">
                <label asp-for="NombreDestinatario" class="control-label">Nombre del Destinatario:</label>
                <input asp-for="NombreDestinatario" class="form-control" />
                <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label">Fecha de Creaci√≥n:</label>
                <input asp-for="FechaCreacion" class="form-control" type="date" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>